# =============================================
# Kafka Configuration
# =============================================
KAFKA_BOOTSTRAP_SERVERS=kafka-broker:9092

# =============================================
# Polygon.io API credentials
# =============================================
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_SECRET_KEY=your_polygon_secret_key_here

# =============================================
# Alpaca API Configuration
# =============================================
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_API_SECRET=your_alpaca_secret_key_here

# Trading Mode Configuration
TRADING_MODE=paper
ALPACA_PAPER_API_KEY=your_alpaca_paper_api_key_here
ALPACA_PAPER_SECRET_KEY=your_alpaca_paper_secret_key_here

# =============================================
# PostgreSQL Database Configuration
# =============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stock_trading_analysis
DB_USER=kibrom
DB_PASSWORD=your_secure_password_here

# PostgreSQL configuration for TFT training script
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=stock_trading_analysis
POSTGRES_USER=kibrom
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_SCHEMA=public

# Application Settings
LOG_LEVEL=INFO
CHUNK_SIZE=25000

# Alpaca Base URL Configuration
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_TRADING_MODE=paper

# =============================================
# TFT Model Configuration
# =============================================
TFT_DB_PATH=data/stock_data.db
TFT_MODEL_PATH=models/tft_model.pth
TFT_PREPROCESSOR_PATH=models/preprocessor.pkl
TFT_CONFIG_PATH=config/default_config.json
TFT_LOG_LEVEL=INFO
TFT_GPU_ENABLED=true
TFT_MIXED_PRECISION=true
TFT_NUM_WORKERS=4

# TFT Model Hyperparameters
TFT_MAX_ENCODER_LENGTH=63
TFT_MAX_PREDICTION_LENGTH=5
TFT_BATCH_SIZE=64
TFT_LEARNING_RATE=0.001
TFT_HIDDEN_SIZE=64
TFT_LSTM_LAYERS=2
TFT_ATTENTION_HEAD_SIZE=4
TFT_DROPOUT=0.2
TFT_MAX_EPOCHS=100
